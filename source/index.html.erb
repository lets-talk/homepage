---
title: Let´s Talk - Mensajería instantánea para grandes empresas
---



<section class="section" id="about">
  <div class="container container-lg">

    <div class="row">
      <div class="col col-sm-7">
        <h1 class="type-jumbo"><%= data.home.title %></h1>

        <ol>
          <% data.home.benefits.each do |b| %>
          <li><%= b %></li>
          <% end %>
        </ol>

        <form>
          <label></label>
          <div class="form-group">
            <input class="form-input" type="text" name="contact" placeholder="<%= data.home.cta.placeholder %>">
            <button class="button-secondary"><%= data.home.cta.action %></button>
          </div>
        </form>

        <%= link_to(
          "¿Quieres conocer mas sobre Let´s Talk?",
          "#about"
        ) %>
      </div>
      <div class="col col-sm-5 p-relative">
        <%= image_tag 'graphic-webchat.png', class: 'graphic-webchat image-2x' %>
      </div>
    </div>

  </div>

  <%= image_tag 'graphic-background-top.svg', class: 'graphic-background-top image-2x' %>

</section>



<section class="section" id="overview">
  <div class="container container-lg">

    <div class="row">
      <div class="col col-sm-8">
        <h2 class="type-display mb-x15"><%= data.home.headline %></h2>
      </div>
    </div>

    <ul class="row">
      <% data.home.overview.each do |item| %>
      <li class="col col-sm-6 list-unstyled mb-x10">
        <h3 class="type-headline"><%= item.title %></h3>
        <p><%= item.description %></p>
        <%= link_to( item.action, item.url ) %>
      </li>
      <% end %>
    </ul>

  </div>
</section>



<section class="section" id="contact">
  <div class="container container-lg">

    <div class="row">

      <div class="col col-sm-6">
        <h2 class="type-mega"><%= data.home.contact.title %></h2>
        <p>
          <%= data.home.contact.description %>
          <%= link_to( data.home.contact.action, data.home.contact.url ) %>
        </p>

        <form>
          <input class="form-input u-full-width" type="text" placeholder="<%= data.home.contact.form.name %>">
          <input class="form-input u-full-width" type="text" placeholder="<%= data.home.contact.form.email %>">
          <input class="form-input u-full-width" type="text" placeholder="<%= data.home.contact.form.company %>">
          <textarea class="form-textarea u-full-width" placeholder="<%= data.home.contact.form.company %>"></textarea>
          <button class="button-secondary"><%= data.home.contact.form.submit %></button>
        </form>
      </div>

      <div class="col col-sm-6 p-relative">
        <%= image_tag 'graphic-contact.svg', class: 'graphic-contact image-2x' %>
      </div>

    </div>

  </div>
</section>
